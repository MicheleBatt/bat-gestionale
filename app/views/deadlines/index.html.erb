<div class="d-flex justify-content-between m-4">
  <h4>Prossime scadenze</h4>
  <div>
    <%= link_to deadlines_path(format: :xlsx), class: "btn btn-warning mx-2 text-white" do %>
      <i class="fas fa-download" aria-hidden="true"></i> Export xls
    <% end %>
  </div>
</div>

<div id="deadlines">
  <% @deadlines_by_year.keys.each do | year | %>
    <div class="mx-2 mx-md-5 my-5">
      <h4 class="text-secondary"><%= year %></h4>
      <% @deadlines_by_year[year].each do | deadline | %>
        <%= render deadline %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center justify-content-lg-end my-5 mx-4">
  <%= link_to "Nuova scadenza", new_deadline_path, class: "btn btn-success" %>
</div>
