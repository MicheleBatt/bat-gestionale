<p style="color: green"><%= notice %></p>

<h4 class="d-flex d-lg-none m-4">Prossime scadenze</h4>

<div id="deadlines">
  <% @deadlines_by_year.keys.each do | year | %>
    <div class="mx-2 mx-md-5 my-5">
      <h4 class="text-secondary"><%= year %></h4>
      <% @deadlines_by_year[year].each do | deadline | %>
        <%= render deadline %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-end my-5 mx-4">
  <%= link_to "Nuova scadenza", new_deadline_path, class: "btn btn-success text-right" %>
</div>
