<div class="d-flex justify-content-between m-4">
  <h4>Prossime scadenze</h4>
  <div>
    <%= link_to deadlines_path(q: params[:q]&.to_unsafe_h, format: :xlsx), class: "btn btn-warning mx-2 text-white" do %>
      <i class="fas fa-download" aria-hidden="true"></i> Export xls
    <% end %>
  </div>
</div>

<% if @deadlines_by_year.present? || params[:q].present? %>
  <%= search_form_for @search do |f| %>
    <div class="d-flex flex-wrap justify-content-center align-items-end px-x px-lg-4 mb-5 mt-3">
      <div class="form-group d-block pl-3 pb-3 mb-0 mx-2">
        <%= f.label :description_cont, 'Descrizione', class: 'font-weight-bold' %>
        <%= f.text_field :description_cont, placeholder: 'Filtra per descrizione', class: 'form-control' %>
      </div>

      <div class="form-group d-block pl-3 pb-3 mb-0 mx-2">
        <%= f.label :year_eq, 'Mese', class: 'font-weight-bold' %>
        <%= f.select :year_eq,
                     options_for_select(((Deadline.minimum('year') || Time.now.year)..(Deadline.maximum('year') || Time.now.year)).map{ | year | [year, year] }, @search.year_eq),
                     { include_blank: "Qualsiasi anno" },
                     class: 'form-control'
        %>
      </div>

      <div class="form-group d-block pl-3 pb-3 mb-0 mx-2">
        <%= f.label :month_eq, 'Mese', class: 'font-weight-bold' %>
        <%= f.select :month_eq,
                     options_for_select(italian_months_for_select, @search.month_eq),
                     { include_blank: "Qualsiasi mese" },
                     class: 'form-control'
        %>
      </div>

      <div class="pb-3 d-flex">
        <button type="submit" class="btn btn-success mx-2">
          <i class="fas fa-search"></i> Cerca
        </button>

        <%= link_to deadlines_path, class: "btn btn-primary mx-2" do %>
          <i class="fas fa-filter" aria-hidden="true"></i> Reset
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>



<div id="deadlines">
  <% @deadlines_by_year.keys.each do | year | %>
    <div class="mx-2 mx-md-5 my-5">
      <h4 class="text-secondary"><%= year %></h4>
      <% @deadlines_by_year[year].each do | deadline | %>
        <%= render deadline %>
      <% end %>
    </div>
  <% end %>
</div>


<div class="d-flex justify-content-center justify-content-lg-end my-5 mx-4">
  <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#deadlineCreationModal">
    Nuova scadenza
  </button>
</div>

<!-- Modale per la creazione di un nuovo movimento di cassa -->
<div class="modal fade" id="deadlineCreationModal" tabindex="-1" aria-labelledby="deadlineCreationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title fs-5" id="deadlineCreationModalLabel">Aggiungi una nuova scadenza</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="new_deadline_error_messages"></div>

        <%= render "form", deadline: @new_deadline %>
      </div>
    </div>
  </div>
</div>
