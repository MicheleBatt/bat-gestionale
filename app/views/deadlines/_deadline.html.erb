<div class="d-flex justify-content-between align-items-center mx-4 my-2" id="<%= dom_id deadline %>">
  <div class="d-flex align-items-center">
    <div>
      <strong><%= parse_date(deadline.expired_at, "%d") %> <%= italian_month(deadline.month) %>:</strong>
    </div>

    <div class="mx-2"><%= deadline.description %></div>
  </div>

  <div class="d-flex align-items-center">
    <%= link_to edit_deadline_path(deadline), class: "text-secondary text-decoration-none" do %>
      <i class="fas fa-fw fa-edit"></i>
    <% end %>

    <%= button_to deadline, method: :delete, class: "btn btn-link text-danger text-decoration-none mx-3 p-0" do %>
      <i class="fas fa-fw fa-trash"></i>
    <% end %>
  </div>
</div>
