<div class="deadline-item <%= 'deadline-item-urgent' if deadline.upcoming? %>" id="deadline_<%= deadline.id %>">
  <div class="deadline-item-content">
    <div class="deadline-date">
      <span class="deadline-day"><%= parse_date(deadline.expired_at, "%d") %></span>
      <span class="deadline-month"><%= italian_month(deadline.month) %></span>
    </div>
    
    <div class="deadline-description">
      <h6 class="mb-0"><%= deadline.description %></h6>
    </div>
  </div>

  <div class="deadline-actions">
    <button type="button" class="btn deadline-action-btn deadline-edit-btn" data-bs-toggle="modal" data-bs-target="#deadlineEditingModal_<%= deadline.id %>" title="Modifica">
      <i class="fas fa-edit"></i>
    </button>

    <%= button_to organization_deadline_path(@organization, deadline), method: :delete, class: "btn deadline-action-btn deadline-delete-btn", title: "Elimina" do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>

  <!-- Modale per la cancellazione / modifica di una scadenza -->
  <%= render "modal",
             modal_id: "deadlineEditingModal_#{deadline.id}",
             title: "Modifica scadenza",
             deadline: deadline
  %>
</div>
