<div class="d-flex my-4 mx-2 p-2 justify-content-between align-items-center rounded shadow border border-secondary bg-white" id="user_<%= user.id %>">
  <div class="d-block mx-2">
    <p class="my-0"><%= user.full_name %></p>
    <p class="my-0"><%= user.email %></p>
    <p class="my-0 text-secondary"><small><%= user.role&.upcase %></small></p>
  </div>

  <div class="d-flex align-items-center">
    <button type="button" class="btn btn-link text-secondary text-decoration-none mx-1 p-0" data-bs-toggle="modal" data-bs-target="#userEditingModal_<%= user.id %>">
      <i class="fas fa-fw fa-edit"></i>
    </button>

    <%= button_to user, method: :delete, class: "btn btn-link text-danger text-decoration-none mx-3 p-0" do %>
      <i class="fas fa-fw fa-trash"></i>
    <% end %>
  </div>

  <!-- Modale per la cancellazione / modifica di un utente -->
  <%= render "modal",
             modal_id: "userEditingModal_#{user.id}",
             title: "Modifica utente",
             user: user,
             path: user_path(user),
             method: :patch
  %>
</div>
