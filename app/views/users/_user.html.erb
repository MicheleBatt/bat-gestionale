<div class="user-card" id="user_<%= user.id %>">
  <div class="user-card-header">
    <div class="d-flex justify-content-between align-items-center">
      <div class="user-info-container">
        <h6 class="mb-1 text-white"><%= user.full_name %></h6>
        <p class="text-muted mb-0"><small><%= user.email %></small></p>
      </div>
      <div class="d-flex gap-2">
        <button type="button" class="btn user-action-btn user-edit-btn" data-bs-toggle="modal" data-bs-target="#userEditingModal_<%= user.id %>" title="Modifica">
          <i class="fas fa-edit"></i>
        </button>
        <%= button_to user, method: :delete, class: "btn user-action-btn user-delete-btn", title: "Elimina" do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="user-card-body">
    <div class="user-role-section">
      <div class="user-role-badge <%= user.role&.downcase %>-role">
        <i class="fas fa-user-tag me-2"></i>
        <%= user.role&.upcase || 'USER' %>
      </div>
    </div>
  </div>

  <!-- Modale per la cancellazione / modifica di un utente -->
  <%= render "modal",
             modal_id: "userEditingModal_#{user.id}",
             title: "Modifica utente",
             user: user,
             path: user_path(user),
             method: :patch
  %>
</div>
